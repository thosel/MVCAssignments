@model CitiesViewModel

@{ if (Model.Cities.Count > 0)
    {

        <div class="row">
            <div class="col-1">
                <strong>Id</strong>
            </div>
            <div class="col">
                <strong>Name</strong>
            </div>
        </div>

        <hr />
    }
}

@{
    foreach (var city in @Model.Cities)
    {
        <div class="row">
            <div class="col-1">@city.Id</div>
            <div class="col">@city.Name</div>
        </div>
    }
}