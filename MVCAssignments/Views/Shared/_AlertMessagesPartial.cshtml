<div id="status-div" class="d-none">
    <strong id="status-message"></strong>
</div>

@{if ((string)TempData["create-country"] == "success")
    {
        <div class="alert alert-success">
            <strong>A new country was created successfully!</strong>
        </div>
    }
    else if ((string)TempData["create-country"] == "failure")
    {
        <div class="alert alert-danger">
            <strong>Failed to create a new country!</strong>
        </div>
    }
}

