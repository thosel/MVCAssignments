@model LanguagesViewModel

@{ if (Model.Languages.Count > 0)
    {

        <div class="row">
            <div class="col-1">
                <strong>Id</strong>
            </div>
            <div class="col">
                <strong>Name</strong>
            </div>
        </div>

        <hr />
    }
}

@{
    foreach (var language in @Model.Languages)
    {
        <div class="row">
            <div class="col-1">@language.Id</div>
            <div class="col">@language.Name</div>
        </div>
    }
}