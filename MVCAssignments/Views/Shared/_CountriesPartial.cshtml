@model CountriesViewModel

@{ if (Model.Countries.Count > 0)
    {

        <div class="row">
            <div class="col-1">
                <strong>Id</strong>
            </div>
            <div class="col">
                <strong>Name</strong>
            </div>
        </div>

        <hr />
    }
}

@{
    foreach (var country in @Model.Countries)
    {
        <div class="row">
            <div class="col-1">@country.Id</div>
            <div class="col">@country.Name</div>
        </div>
    }
}