@model CreatePersonViewModel

@{
    ViewData["Title"] = "Create person";
}

<h1>@ViewData["Title"]</h1>

@if ((string)TempData["create-person"] == "failure")
{
    <div class="alert alert-danger">
        <strong>Failed to create the person!</strong>
    </div>
}

<a asp-controller="People" asp-action="Index" class="link-primary">Go back to people</a>

<hr />

<form asp-controller="People" asp-action="CreatePerson" id="create-person-form" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger" id="phone-validation-message"></span>
    </div>
    <div class="form-group">
        <label asp-for="CityId"></label>
        <select asp-for="CityId" asp-items="@Model.Cities" id="cities" class="form-control">
            <option value="-1">Please select a city!</option>
            <option value="0">Show all countries and cities!</option>
        </select>
        <span asp-validation-for="CityId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CountryId"></label>
        <select asp-for="CountryId" asp-items="@Model.Countries" id="countries" class="form-control">
            <option value="-1">Please select a country!</option>
            <option value="0">Show all countries and cities!</option>
        </select>
        <span asp-validation-for="CountryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LanguageIds"></label>
        <select asp-for="LanguageIds" asp-items="@Model.Languages" id="languages" class="form-control" multiple>
        </select>
        <span asp-validation-for="LanguageIds" class="text-danger"></span>
    </div>
    <button type="submit" class="form-control form-control-sm btn btn-success mb-2">
        Create person
    </button>
    <button type="reset" class="form-control form-control-sm btn btn-danger" id="reset">
        Reset
    </button>
</form>

<script src="~/js/people/people.js" asp-append-version="true"></script>
<script src="~/js/people/create-person.js" asp-append-version="true"></script>
