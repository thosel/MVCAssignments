@model CreateCountryViewModel

@{
    ViewData["Title"] = "Create country";
}

<h1>@ViewData["Title"]</h1>

@if ((string)TempData["create-country"] == "failure")
{
    <div class="alert alert-danger">
        <strong>Failed to create the country!</strong>
    </div>
}
else if ((string)TempData["create-country-country-existed"] == "failure")
{
    <div class="alert alert-danger">
        <strong>Failed to create the country because the country already existed!</strong>
    </div>
}

<a asp-controller="Countries" asp-action="Index" class="link-primary">Go back to countries</a>

<hr />

<form asp-controller="Countries" asp-action="CreateCountry" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="form-control form-control-sm btn btn-success mb-2">
        Create country
    </button>
    <button type="reset" class="form-control form-control-sm btn btn-danger">
        Reset
    </button>
</form>
